<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
  <div class='actions'>
    <%= f.submit 'Update Book' %>
  </div>

<% end %>

<%= link_to 'Show', book_path(@book) %>
